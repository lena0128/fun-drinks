<div class="form">

  <%= form_for(@drink, url: form_url_helper(@item)) do |f| %>
  # we can override the default url by passing a second argument - url: form_url_helper(@item)

   <%= f.label "Name:" %><br>
   <%= f.text_field :drink_name %>
   <br><br> 

   <%= f.label "Submit an image url: " %><br>
   <%= f.text_field :drink_thumb %>
   <br><br>

   <%= f.label "Recipe: " %><br>
   <%= f.text_area :recipe, cols: 30, rows: 10 %>
   <br><br>

   <%if !@item %>
   <%= f.label "Select a main ingredient:" %>
   <%= f.collection_select :item_id, Item.all, :id, :name, prompt: true %>
   <%end%>

   <br><br>
   <%= f.submit %>
   <%end%>
</div>