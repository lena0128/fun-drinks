<div class="form">
<%= form_with(model: @user) do |f| %>
    <%= f.label "Username:" %><br>
    <%= f.text_field :username %>
    <br><br>

    <%= f.label "Email:" %><br>
    <%= f.email_field :email %>
    <br><br>

    <%= f.label "Password:" %><br>
    <%= f.password_field :password %>
    <br><br>
    <%= f.label "Confirm your password:" %><br>
    <%= f.password_field :password_confirmation %>
    <br><br>

    <%= f.submit %>
    <%end%>

</div>    
   