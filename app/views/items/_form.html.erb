<div class="form">
<%= form_for @item do |f| %>

   <%= f.label "Name:" %><br>
   <%= f.text_field :name %>
   <br><br>   
   
   <%= f.label "Submit an image url:" %><br>
   <%= f.text_field :image_url %>
   <br><br>
   
   <%= f.label "Description:" %><br>
   <%= f.text_area :description, cols: 30, rows: 10 %>
   <br><br>
   
   <%= f.label "Is this Alcohol? (yes / no)" %><br>
   <%= f.text_field :alcohol %>
   <br><br>

   <%= f.label "Create a drink with this ingredient: " %><br>
     <%= f.fields_for :drinks do |d| %>
       <%= d.label "Drink Name:"%>
       <%= d.text_field :drink_name %>
      <br>
        <%= d.label "Submit an image url:" %>
        <%= d.text_field :drink_thumb %>
      <%end%>
      <br><br>  
   
   <%= f.submit %>
   <br><br>

  <%end%> 
</div>