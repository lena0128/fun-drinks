<div class="form">
<%= form_for @item do |f| %>

   <%= f.label "Name:" %><br>
   <%= f.text_field :name %>
   <br><br>   
   
   <%= f.label "Submit an image url:" %><br>
   <%= f.text_field :image_url %>
   <br><br>
   
   <%= f.label "Description:" %><br>
   <%= f.text_area :description, cols: 30, rows: 10 %>
   <br><br>
   
   <%= f.label "Is this Alcohol? (yes / no)" %><br>
   <%= f.text_field :alcohol %>
   <br><br>
   
   <%= f.submit %>
   <br><br>

  <%end%> 
</div>