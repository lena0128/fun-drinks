<div class="form">

<%= form_with(model: @item) do |f| %>

   <%= f.label "Name:" %><br>
   <%= f.text_field :name %>
   <br><br>   
   
   <%= f.label "Submit an image url:" %><br>
   <%= f.text_field :image_url %>
   <br><br>
   
   <%= f.label "Description:" %><br>
   <%= f.text_area :description, cols: 30, rows: 10 %>
   <br><br>
   
   <%= f.label "Alcohol? (yes/no) " %><br>
   <%= f.text_field :alcohol %>
   <br><br>

   <%= f.label "Drink with this ingredient: " %><br>
     <%= f.fields_for :drinks, @drinks do |d| %>
       <%= d.label "Drink Name:"%>
       <%= d.text_field :drink_name %>
      <br>
        <%= d.label "Submit an image url:" %>
        <%= d.text_field :drink_thumb %>
        <br>
        <%= d.label "Recipe: " %><br>
        <%= d.text_area :recipe, cols: 30, rows: 10 %>
        <br>
      <%end%>
      <br><br>  
   
   <%= f.submit %>
   <br><br>

  <%end%> 
</div>